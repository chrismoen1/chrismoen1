<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/DarkCyan</item>
        <item name="colorAccent">@color/DarkCyan</item>
    </style>
    <style name="mScrollBar">
        <item name="android:scrollbarSize">1dp</item>
        <item name="android:scrollbarThumbVertical">@color/DarkCyan</item>
    </style>
</resources>
